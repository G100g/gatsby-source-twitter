{
  "src": {
    "tagName": "v%s"
  },
  "github": {
    "release": true
  },
  "npm": {
    "publish": true
  },
  "git": {
    "commitArgs": "--no-verify"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "angular",
      "infile": "CHANGELOG.md"
    }
  },
  "safeBump": false
}
